@model Character

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверенны что хотите удалить запись?</h3>
<div>
    <h4>Персонаж</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Имя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Оружие
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weapon)
        </dd>
        <dt class = "col-sm-2">
            ID_уровня
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Level_ID)
        </dd>
        <dt class = "col-sm-2">
            ID_игрока
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gamer_ID)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться назад</a>
    </form>
</div>
