@model Level

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверенны что хотите удалить запись?</h3>
<div>
    <h4>Уровень</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Уровень
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Level_Number)
        </dd>
        <dt class = "col-sm-2">
            Бонус
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bonus)
        </dd>
        <dt class = "col-sm-2">
            Способность
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capability)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться назад</a>
    </form>
</div>
