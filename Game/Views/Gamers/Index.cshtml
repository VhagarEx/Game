@model Game.Models.GamerRankViewModel

@{
    ViewData["Title"] = "Игроки";
}

<h1>Игроки</h1>

<p>
    <a asp-action="Create">Создать запись</a>
</p>
<form asp-controller="Gamers" asp-action="Index" method="get">
    <p>
        <label>
            Ранг:
            <select asp-for="GamerRank" asp-items="Model.Rank">
                <option value="">Все</option>
            </select>
        </label>

        <label>Поиск: <input type="text" asp-for="SearchString" /></label>
        <input type="submit" value="Фильтр" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gamers.First().Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamers.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamers.First().DataRegistr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamers.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamers.First().Paswd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamers.First().Rank)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Gamers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataRegistr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paswd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>